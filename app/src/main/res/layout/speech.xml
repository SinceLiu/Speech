<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/speech"
    android:layout_width="@dimen/display_width"
    android:layout_height="@dimen/display_height"
    android:layout_gravity="center"
    android:clickable="true"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px"
        android:clickable="false"
        android:gravity="left|center_vertical"
        android:text="@string/hello1"
        android:textColor="@android:color/white"
        android:textSize="24px" />

    <ImageView
        android:id="@+id/recording_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/record_margin_bottom"
        android:background="@drawable/recording_animation1"
        android:paddingBottom="@dimen/record_padding"
        android:paddingTop="@dimen/record_padding"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/recording_iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/record_margin_bottom"
        android:background="@drawable/recording_animation2"
        android:paddingBottom="@dimen/record_padding"
        android:paddingTop="@dimen/record_padding"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/loading_pb"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/record_margin_bottom"
        android:indeterminateDrawable="@drawable/loading_animation"
        android:paddingBottom="@dimen/record_padding"
        android:paddingTop="@dimen/record_padding"
        android:visibility="gone" />

    <Button
        android:id="@+id/hold_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/record_margin_bottom"
        android:background="@drawable/bg_record_selector"
        android:clickable="false"
        android:paddingBottom="@dimen/record_padding"
        android:paddingTop="@dimen/record_padding" />

</FrameLayout>
